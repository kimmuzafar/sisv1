{% extends ':qnews:qnews.html.twig' %}

{% block title %}News List{% endblock %}

{% set breadcrumbPage = "News List" %}

{% block content %}
    <section id="content" class="table-layout animated fadeIn">

        <!-- begin: .tray-center -->
        <div class="tray tray-center p25 va-t posr">

            <!-- Admin-panels -->
            <div class="admin-panels fade-onload sb-l-o-full">

                {#<h3 class="text-center mb25 fw400">Menu Item Options</h3>#}
                <div class="row">
                    <div class="col-md-12">
                        <div data-animate="fadeIn" class="panel panel-transparent">
                            <h5 class="text-muted mb20 text-center">QUICK NEWS LIST</h5>
                        </div>
                    </div>

                    <!-- News List -->
                    <div class="col-md-12">
                        
                        <div class="panel panel-visible" id="spy3">
                            <div class="panel-heading">
                                <div class="panel-title hidden-xs">
                                    <span class="glyphicon glyphicon-tasks"></span>
                                    News List
                                </div>
                            </div>
                            <div class="panel-body pn">
                                
                                <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="user-role-datatable">
                                    <thead>
                                        <tr>
                                            <th class="text-center">SELECT</th>
                                            <th class="text-center">TITLE</th>
                                            <th class="text-right">DATE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                            {% if entity.dateCreated > app.user.dateCreated %}
                                            <tr>
                                                <td class="text-center">
                                                    <label class="option block mn">
                                                        <input type="checkbox" name="recordID[]" value="{{ entity.id }}">
                                                        <span class="checkbox mn"></span>
                                                    </label>
                                                </td>
                                                <td class="text-center" {% if entity.isRead==0 %}style="font-weight:bold; font-size:15px;"{% endif %}>
                                                    <a href="{{ path('wit_quicknews_default_view', {'id':entity.id}) }}">{{ entity.title|capitalize }}</a>
                                                </td>
                                                <td class="text-right">{{ entity.dateCreated|date("F jS \\a\\t g:ia") }}</td>
                                            </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <a href="{{ path('wit_quicknews_default_index') }}" class="btn btn-default btn-gradient dark btn-block">Compose New Quick News</a>
                    </div>
                </div>

            </div>

        </div>
        <!-- end: .tray-center -->

        <!-- begin: .tray-right -->
