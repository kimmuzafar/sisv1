{% extends ':admin:admin.html.twig' %}

{% block title %}Bulk Upload Users{% endblock %}
{% set breadcrumbPage = "Bulk Upload Users" %}

{% block content %}
    
    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">
        
        <!-- begin: .tray-center -->
        <div class="tray tray-center va-t posr">

            <div class="mw1100 center-block">
                <h2 class="lh30 mt25 text-center">BULK UPLOAD USERS</h2>
                <p class="text-center">
                    All bulk uploaded users will be able to login but may not know that their account was created, so they must be sent account information from users management page.<br />
                    All uploaded users will have "ROLE_USER" the system that can be changed from user listing page
                </p>
            </div>

            {% for flashMessageInfo in app.session.flashbag.get('info') %}
                {% if flashMessageInfo %}
                    <p><strong>UPLOADED USERS:</strong></p>
                    <p>{{ flashMessageInfo | raw }}</p>
                {% endif %}
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                {% if flashMessage %}
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        <i class="fa fa-remove pr10"></i>
                        <strong>{{ flashMessage | raw }}</strong>
                    </div>
                {% endif %}
            {% endfor %}

            <!-- create new user panel -->
            <div class="panel mb25 mt5">
                <div class="panel-heading">
                    <span class="panel-title"> Upload Users</span>
                    <ul class="nav panel-tabs-border panel-tabs">
                        <li class="active"><a href="#tab-add-new-record" data-toggle="tab">info</a></li>
                    </ul>
                </div>
                <div class="panel-body p20 pb10">
                    <div class="tab-content pn br-n admin-form">

                        <div id="tab-add-new-user" class="tab-pane active">
                            <form id="bulk-upload-users-form" action="{{ path('wit_admin_user_bulkupload') }}" method="post" enctype="multipart/form-data">        
                                
								<div class="row">
                                    <div class="col-md-12">
                                        <h4>Upload Users from CSV file.</h4>
                                        
                                        <hr class="short br-lighter">
                                        <div class="media">
                                            <div class="media-body">
                                                <h4 class="media-heading">CSV File Template</h4> 
                                                Please download and append all your users in this template file, don't remove top headers in this file, all fields are required in this file. Please don't change column/field names in the file as well.
                                            </div>
                                            <a class="media-right" href="{{ asset('bundles/secure/file-templates/user-bulk-upload-template.csv') }}" target="_blank">
                                                <img src="{{ asset('bundles/secure/assets/img/csv.png') }}" alt="CSV Image" title="Download Template CSV">
                                            </a>
                                        </div>
                                        <hr class="short br-lighter">
                                        
                                        <div class="admin-form">
                                        
                                            <div class="section">
                                                <label for="file1" class="field-label">Select File To Upload -
                                                    <span class="small-text text-muted">(ONLY CSV)</span>
                                                </label>
                                                <label for="file1" class="field prepend-icon file">
                                                    <span class="button btn-primary">Choose File</span>
                                                    <input type="file" class="gui-file" name="upload1" id="file1" onChange="document.getElementById('usersFile').value = this.value;">
                                                    <input type="text" class="gui-input" id="usersFile" name="usersFile" placeholder="no file selected" readonly>
                                                    <label for="comment" class="field-icon"><i class="fa fa-upload"></i>
                                                    </label>
                                                </label>
                                            </div>
                                            <!-- end  section -->
                                            
                                            <!-- end .form-body section -->
                                            <div class="panel-footer text-right">
                                                <button type="submit" class="button btn-primary">Upload Now</button>
                                            </div>
                                            <!-- end .form-footer section -->
                                            
                                        </div>
                                        
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end: create new user panel -->

        </div>
        <!-- end: .tray-center -->



        <!-- begin: .tray-right -->
        <aside class="tray tray-right tray290 va-t pn" data-tray-height="match">

            <!-- menu quick links -->
            <div class="p20 admin-form">

                <h4 class="mt5 text-muted fw500"> Search / Filter</h4>

                <hr class="short">

                

            </div>

        </aside>
                <!-- end: .tray-right -->



    </section>
    <!-- End: Content -->

{% endblock %}

