                            <div class="widget-menu pull-right mr10">
                                <a href="{{ path('wit_quicknews_default_viewall') }}">Browse All</a>
                            </div>
                        </div>
                        <div class="panel-body pn">
                            <table class="table mbn tc-med-1 tc-bold-last">
