{% extends ':user:user.html.twig' %}

{% block title %}Application History{% endblock %}
{% set breadcrumbPage = "Application History" %}

{% block content %}
    
    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">
        
        <!-- begin: .tray-center -->
        <div class="tray tray-center va-t posr">

            <div class="col-md-12 center-block">

                <div class="mw1100 center-block">
                    <h2 class="lh30 mt25 text-center">APPLICATION HISTORY</h2>
                    <p class="lead mb50 text-center">This page lists all your applications submitted against any schedule..</p>
                </div>

                {% for flashMessage in app.session.flashbag.get('error') %}
                    {% if flashMessage %}
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <i class="fa fa-remove pr10"></i>
                            <strong>{{ flashMessage | raw }}</strong>
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="row">
                    
                    <div class="col-md-12">
                        
                        <div class="panel panel-visible" id="spy3">
                            <div class="panel-heading">
                                <div class="panel-title hidden-xs">
                                    <span class="glyphicon glyphicon-tasks"></span>
                                    Your Applications
                                </div>
                            </div>
                            <div class="panel-body pn">
                                <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="user-role-datatable">
                                    <thead>
                                        <tr>
                                            {# <th class="text-center">SELECT</th> #}
                                            <th class="">SCHEDULE</th>
                                            <th class="">REF#</th>
                                            <th class="">FULL NAME</th>
                                            <th class="">ID#</th>
                                            <th class="">STUDY LEVEL</th>
                                            <th class="">MAJOR</th>
                                            <th class="text-center">STATUS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in applications %}
                                            <tr>
                                                <td class="">{{ entity.admissionScheduler.title }}</td>
                                                <td class=""><a href="{{ path('wit_user_application_status', { 'application_id': entity.id }) }}">{{ entity.applicationReferenceNo|upper }}</a></td>
                                                <td class="">{{ entity.firstname }} {{ entity.familyName }}</td>
                                                <td class="">{{ entity.nationalId }}</td>
                                                <td class="">{{ entity.studyLevel }}</td>
                                                <td class="">{{ entity.major }}</td>
                                                <td class="text-center">
                                                    {% if entity.applicationStatus == 0 %}
                                                        Pending
                                                    {% elseif entity.applicationStatus == 1 %}
                                                        Reviewed
                                                    {% elseif entity.applicationStatus == 2 %}
                                                        Accepted
                                                    {% elseif entity.applicationStatus == 3 %}
                                                        Rejected
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                        
                    </div>

                </div>

            </div>

        </div>
        <!-- end: .tray-center -->



        {# <!-- begin: .tray-right -->
        <aside class="tray tray-right tray290 va-t pn" data-tray-height="match">

            <!-- menu quick links -->
            <div class="p20 admin-form">

                <h4 class="mt5 text-muted fw500"> Search / Filter</h4>

                <hr class="short">

                

            </div>

        </aside>
                <!-- end: .tray-right --> #}



    </section>
    <!-- End: Content -->

{% endblock %}

