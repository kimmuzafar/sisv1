{% extends ':onboarding:onboarding.html.twig' %}

{% block title %}Onboarding by groups{% endblock %}
{% set breadcrumbPage = "Onboarding by groups" %}

{% block content %}
    
    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">
        
        <!-- begin: .tray-center -->
        <div class="tray tray-center va-t posr">

            <div class="mw1100 center-block">
                <h2 class="lh30 mt25 text-center">ONBOARDING BY GROUPS</h2>
                <p class="text-center">
                    Once Onboard button is pressed, all users having User Role in selected applications group, will be onboarded as Student in the system!<br />
                    WIT ID will be assigned to each onboarded student/internee starting based on given pattern.
                </p>
            </div>

            {% for flashMessage in app.session.flashbag.get('error') %}
                {% if flashMessage %}
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        <i class="fa fa-remove pr10"></i>
                        <strong>{{ flashMessage | raw }}</strong>
                    </div>
                {% endif %}
            {% endfor %}

            <!-- create new user panel -->
            <div class="panel mb25 mt5">
                <div class="panel-heading">
                    <span class="panel-title"> New Onboarding</span>
                    <ul class="nav panel-tabs-border panel-tabs">
                        <li class="active"><a href="#tab-add-new-record" data-toggle="tab">info</a></li>
                    </ul>
                </div>
                <div class="panel-body p20 pb10">
                    <div class="tab-content pn br-n admin-form">

                        <div id="tab-add-new-user" class="tab-pane active">
                            <form id="onboard-by-group-form" action="{{ path('wit_onboarding_default_bygroup') }}" method="post">        
                                
                                <div class="section row">
                                    <div class="col-md-12">
                                        <label for="file1" class="field-label">WIT ID Pattern (last used pattern will automatically display):</label>
                                        <label class="field prepend-icon">
                                            <input type="text" value="{{ lastWitIdPattern.pattern }}" class="gui-input" required="required" name="wit_id_last_used_pattern" id="wit_id_last_used_pattern">
                                            <label class="field-icon"><i class="fa fa-envelope"></i>
                                            </label>
                                        </label>
                                    </div>
                                    <!-- end section -->
                                </div>
                                <!-- end .section row section -->

                                <div class="section row">
                                    <div class="col-md-12">
                                        <label for="file1" class="field-label">Select Group:</label>
                                        <label class="field select">
                                            <select id="group" name="group">
                                                <option value=""> - Please select group..</option>
                                                {% for group in groups %}
                                                    <option value="{{ group.id }}">{{ group.title }}</option>
                                                {% endfor %}
                                            </select>
                                            <i class="arrow"></i>
                                        </label>
                                    </div>
                                </div><!-- end .section row section -->

                                <!-- end .form-body section -->
                                <div class="panel-footer clearfix">
                                    <button type="submit" class="button btn-primary pull-right">Onboard</button>
                                </div>
                                <!-- end .form-footer section -->
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end: create new user panel -->

        </div>
        <!-- end: .tray-center -->



        <!-- begin: .tray-right -->
        <aside class="tray tray-right tray290 va-t pn" data-tray-height="match">

            <!-- menu quick links -->
            <div class="p20 admin-form">

                <h4 class="mt5 text-muted fw500"> Help / Information</h4>

                <hr class="short">

                <p><span class="text-muted">WIT ID PATTERN:</span><br />Automatically populated pattern should not be modified as it's continuation of previous onboarding.</p>


            </div>

        </aside>
                <!-- end: .tray-right -->



    </section>
    <!-- End: Content -->

{% endblock %}

