{% extends ':performance:performance.html.twig' %}

{% block title %}Performance History Detail{% endblock %}

{% set breadcrumbPage = "Performance History Detail" %}

{% block content %}
    
    <!-- Begin: Content -->
    <section id="content" class="table-layout animated fadeIn">
        
        <!-- begin: .tray-center -->
        <div class="tray tray-center va-t posr">

            <div class="col-md-12 center-block">

                <div class="mw1100 center-block">
                    <h2 class="lh30 mt25 text-center">QUARTERLY PERFORMANCE DETAIL</h2>
                    <h4 class="text-primary text-center" style="text-transform: uppercase;">
                        {{ transcriptDetails[0].transcript.nameEnglish }}, ({{ transcriptDetails[0].transcript.witId }})
                    </h4>
                    <p class="text-center">{{ transcriptDetails[0].transcript.program|upper }} &#8594; {{ transcriptDetails[0].transcript.batch|upper }} &#8594; {{ transcriptDetails[0].transcript.quarter|upper }}</p>
                </div>

                {% for flashMessage in app.session.flashbag.get('error') %}
                    {% if flashMessage %}
                        <div class="alert alert-success alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                            <i class="fa fa-remove pr10"></i>
                            <strong>{{ flashMessage | raw }}</strong>
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="row">
                    
                    <div class="col-md-12">
                        
                        <div class="panel panel-visible" id="spy3">
                            <div class="panel-heading">
                                <div class="panel-title hidden-xs">
                                    <span class="glyphicon glyphicon-tasks"></span>
                                    Quarter Performance Detail
                                </div>
                            </div>
                            <div class="panel-body pn">
                                
                                <table class="table admin-form theme-warning tc-checkbox-1 fs13" id="user-role-datatable">
                                    <thead>
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th class="text-left">COURSE</th>
                                            <th class="text-left">CODE</th>
                                            <th class="text-center">CRHS</th>
                                            <th class="text-center">T.MARKS</th>
                                            <th class="text-center">GRADE</th>
                                            <th class="text-center">Q.POINTS</th>
                                            <th class="text-center">T.Q.POINTS</th>
                                            <th class="text-center">REMARKS</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for tdetail in transcriptDetails %}
                                            <tr>
                                            	<td class="text-center">{{ loop.index }}</td>
                                                <td class="text-left">{{ tdetail.course }}</td>
                                                <td class="text-left">{{ tdetail.code }}</td>
                                                <td class="text-center">{{ tdetail.creditHours }}</td>
                                                <td class="text-center">{{ tdetail.marks }}</td>
                                                <td class="text-center">{{ tdetail.grade }}</td>
                                                <td class="text-center">{{ tdetail.points }}</td>
                                                <td class="text-center">{{ tdetail.subjectTotalPoints }}</td>
                                                <td class="text-center">
                                                	{% if tdetail.remarks == "Pass" %}
		                                                <div class="btn btn-xs btn-success btn-block">{{ tdetail.remarks }}</div>
		                                            {% elseif tdetail.remarks == "Fail" %}
		                                                <div class="btn btn-xs btn-danger btn-block">{{ tdetail.remarks }}</div>
		                                            {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    	<tr><td colspan="9"></td></tr>
                                        <tr>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td align="center"><b>G.P.A</b></td>
                                            <td align="center">{{ transcriptDetails[0].transcript.gpa }}</td>
                                        </tr>
                                        <tr>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td></td>
                                        	<td align="center"><b>A.G.P.A</b></td>
                                            <td align="center">{{ transcriptDetails[0].transcript.agpa }}</td>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                        
                    </div>

                </div>

            </div>

        </div>
        <!-- end: .tray-center -->



        {# <!-- begin: .tray-right -->
        <aside class="tray tray-right tray290 va-t pn" data-tray-height="match">

            <!-- menu quick links -->
            <div class="p20 admin-form">

                <h4 class="mt5 text-muted fw500"> Search / Filter</h4>

                <hr class="short">

                

            </div>

        </aside>
                <!-- end: .tray-right --> #}



    </section>
    <!-- End: Content -->

{% endblock %}

