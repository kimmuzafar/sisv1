<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <title>{% block title %}Login Layout{% endblock %}</title>
    <meta name="keywords" content="" />
    <meta name="description" content="">
    <meta name="author" content="Muzafar Ali Jatoi">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font CSS (Via CDN) -->
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800'>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto:400,500,700,300">

    <!-- Page specific styles + stylesheets -->
    {% block pagestylesup %}{% endblock %}

    <!-- Stylesheets -->
    {% block stylesheets %}
        <!-- Theme CSS -->
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/secure/assets/skin/default_skin/css/theme.css') }}">
        {# <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bootstrap/rtl.css') }}"> #}
    {% endblock %}

    <!-- Page specific styles + stylesheets -->
    {% block pagestyles %}{% endblock %}

    <!-- Admin Forms CSS -->
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/secure/assets/admin-tools/admin-forms/css/admin-forms.css') }}">

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ asset('bundles/secure/assets/img/favicon.ico') }}">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body class="external-page sb-l-c sb-r-c">

<!-- Start: Main -->
<div id="main" class="animated fadeIn">

    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">

        <!-- begin canvas animation bg -->
        <div id="canvas-wrapper">
            <canvas id="demo-canvas"></canvas>
        </div>

        <!-- Begin: Content -->
        <section id="content">
            {% block content %}{% endblock %}
        </section>
        <!-- End: Content -->

    </section>
    <!-- End: Content-Wrapper -->

</div>
<!-- End: Main -->

<!-- BEGIN: PAGE SCRIPTS -->

{% block javascripts %}
    <!-- jQuery -->
    <script type="text/javascript" src="{{ asset('bundles/secure/vendor/jquery/jquery-1.11.1.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/vendor/jquery/jquery_ui/jquery-ui.min.js') }}"></script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/bootstrap/bootstrap.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/pages/login/EasePack.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/pages/login/rAF.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/pages/login/TweenLite.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/pages/login/login.js') }}"></script>

    <!-- Theme Javascript -->
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/utility/utility.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/main.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/secure/assets/js/demo.js') }}"></script>

    <!-- Page Javascript -->
    <script type="text/javascript">
        jQuery(document).ready(function() {

            "use strict";

            // Init Theme Core
            Core.init();

            // Init Demo JS
            Demo.init();

            // Init CanvasBG and pass target starting location
            CanvasBG.init({
                Loc: {
                    x: window.innerWidth / 2,
                    y: window.innerHeight / 3.3
                },
            });


        });
    </script>
{% endblock %}

<!-- Page specific styles + stylesheets -->
{% block pagestylesdown %}{% endblock %}

<!-- Page specific scripts + script files -->
{% block pagescripts %}{% endblock %}

<!-- END: PAGE SCRIPTS -->

</body>

</html>